<launch>

    <!-- MOTORCONTROLLER NODE -->
    <node name="motorcontrol_front" pkg="skupar" type="MotorPID.py" respawn="true">
        <param name="name" value="front"/>
        <param name="USB" value="/dev/serial/by-path/pci-0000:00:14.0-usb-0:1:1.0"/>
        <param name="qppsM1" value="2230"/>
        <param name="qppsM2" value="2260"/>
        </node>
    <node name="motorcontrol_rear" pkg="skupar" type="MotorPID.py" respawn="true">
        <param name="name" value="rear"/>
        <param name="USB" value="/dev/serial/by-path/pci-0000:00:14.0-usb-0:2:1.0"/>
        <param name="qppsM1" value="2280"/>
        <param name="qppsM2" value="2250"/>
        </node>
    

    <!-- COMMAND NODE -->
    <node name="command" pkg="skupar" type="command.py" respawn="true">
    </node>


    <!-- JOYSTICK NODE -->
    <node name="joystick" pkg="joy" type="joy_node" respawn="true">    
        <param name="dev" type="string" value="/dev/input/js0" />
        <param name="deadzone" value="0.12" />
    </node>


    <!-- LASER NODE -->
    <!-- Config options -->
    <arg name="serial_port" default="/dev/serial/by-path/pci-0000:00:14.0-usb-0:4:1.0" />
 
    <!-- Defaults (from defaults.launch) -->
    <arg name="launchOutput" default="screen" />
    <arg name="dataTopic" default="/laser/data" />
    <arg name="isOkTopic" default="/laser/is_ok" />
 
  
    <!-- Launch the laser node -->
    <node name="laser_node" pkg="urg_node" type="urg_node" respawn="true" output="$(arg launchOutput)">
    	<param name="serial_port" value="$(arg serial_port)"/>	
	<param name="frame_id" value="laser"/>
	<remap from="first" to="$(arg dataTopic)"/>
    </node>


    <!-- STATIC TRANSFORMATION -->
    <node name="transform_skupar_to_laser" pkg="tf" type="static_transform_publisher" args="0.2 0 0 0 0 3.1415 skupar laser 100" />
    <node name="transform_odom_to_skupar" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 odom skupar 100" />


    <!-- HECTOR_MAPPING NODE -->
    <node name="hector_mapping" pkg="hector_mapping" type="hector_mapping" output="screen">
        <param name="pub_map_odom_transform" value="true"/>

	<!-- Map Frames -->
        <param name="map_frame" value="world"/>
        <param name="base_frame" value="skupar"/>
        <param name="odom_frame" value="skupar"/>

	<!-- Tf use -->
        <param name="use_tf_scan_transformation" value="true"/>
        <param name="use_tf_pose_start_estimate" value="false"/>
        <param name="pub_map_odom_transform" value="true"/>

	<!-- Map size/ Start point -->
	<param name="map_resolution" value="0.025"/>
	<param name="map_size" value="4096"/>
	<param name="map_start_x" value="0.5"/>
	<param name="map_start_y" value="0.5"/>
	<param name="map_multi_res_levels" value="3"/>

	<!-- Map update parameters -->
	<param name="update_factor_free" value="0.4"/>
	<param name="update_factor_occupied" value="0.9"/>
	<param name="map_update_distance_thresh" value="0.04"/>
	<param name="map_update_angle_thresh" value="0.006"/>
	<param name="laser_z_min_value" value="-1.0"/>
	<param name="laser_z_max_value" value="1.0"/>
	<param name="map_pub_period" value="1.0"/>
	
	<!-- Advertising config -->
	<param name="advertise_map_service" value="true"/>
	
	<param name="scan_subscriber_queue_size" value="5"/>
	<param name="scan_topic" value="scan"/>
	
	<param name="tf_map_scanmatch_transform_frame_name" value="odom"/>
    </node>


    <!-- ROBOT MODEL FILE FOR RVIZ --> 
    <param name="robot_description" command="cat $(find urdf_tutorial)/urdf/skupar.urdf" />
    <arg name="gui" default="False"/>
    <param name="use_gui" value="$(arg gui)"/>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true">
    </node>
</launch>
